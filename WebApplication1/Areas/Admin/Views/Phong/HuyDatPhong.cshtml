
@{
    ViewBag.Title = "HuyDatPhong";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Hủy Đặt Phòng: @Model.SoPH</h2>

@if (ViewBag.DanhSachKhachHang != null && ViewBag.DanhSachKhachHang.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Ngày Nhận</th>
                <th>Ngày Trả</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kh in ViewBag.DanhSachKhachHang as List<WebApplication1.Areas.HuyDatPhongViewModel>)
            {
                <tr>
                    <td>@kh.TenKH</td>
                    <td>@kh.NgayNhan?.ToString("dd/MM/yyyy")</td>
                    <td>@kh.NgayTra?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @using (Html.BeginForm("HuyDatPhong", "Phong", FormMethod.Post))
                        {
                            @Html.Hidden("MaPH", kh.MaPH)
                            @Html.Hidden("MaKH", kh.MaKH)
                            <button type="submit" class="btn btn-danger">Hủy Đặt</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có khách hàng đặt phòng này.</p>
}
