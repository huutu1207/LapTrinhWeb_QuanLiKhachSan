@model IEnumerable<WebApplication1.Models.PHONG>
@{
    ViewBag.Title = "DanhSachPhong";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .phong-list {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .phong-item {
        width: 150px;
        height: 150px;
        border: 1px solid #ddd;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 10px;
        text-align: center;
        box-sizing: border-box;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Thêm hiệu ứng khi hover */
    }

        .phong-item a {
            text-decoration: none; /* Xóa gạch dưới */
            color: inherit; /* Lấy màu sắc từ class phong-item */
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .phong-item:hover {
            transform: translateY(-5px); /* Di chuyển nhẹ khi hover */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ khi hover */
            cursor: pointer;
        }

    .booked {
        background-color: #ff6347; /* Màu đỏ nhạt cho phòng đã đặt */
        color: white;
        font-weight: bold;
    }

    .occupied {
        background-color: #4CAF50; 
        color: white;
        font-weight: bold;
    }
</style>
<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <a href="@Url.Action("Create", "Phong", new { area = "Admin" })" class="text-white">Create New</a>
    </button>
</p>

<div class="phong-list">
    @foreach (var phong in Model)
    {
        <div class="phong-item @(phong.TrangThai == "Booked" ? "booked" :
          phong.TrangThai == "Occupied" ? "occupied" : "")">
            <a href="@Url.Action("Chitietphong", "Phong", new { MaPH = phong.MaPH })">
                <p>Room: @phong.SoPH</p>
                <p>Status: @phong.TrangThai</p>
            </a>
        </div>
    }
</div>
