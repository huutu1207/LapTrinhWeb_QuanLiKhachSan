@model IEnumerable<WebApplication1.Models.PHONG>
@{
    ViewBag.Title = "DanhSachPhong";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .phong-list {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .phong-item {
        width: 150px;
        height: 150px;
        border: 1px solid #ddd;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 10px;
        text-align: center;
        box-sizing: border-box;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Thêm hiệu ứng khi hover */
    }

        .phong-item a {
            text-decoration: none; /* Xóa gạch dưới */
            color: inherit; /* Lấy màu sắc từ class phong-item */
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .phong-item:hover {
            transform: translateY(-5px); /* Di chuyển nhẹ khi hover */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ khi hover */
        }

    .da-dat {
        background-color: #ff6347; /* Màu đỏ nhạt cho phòng đã đặt */
        color: white;
        font-weight: bold;
    }

    /* Các kiểu cho khi hover */
    .phong-item:hover {
        cursor: pointer; /* Thêm con trỏ khi hover */
    }

    .phong-item p {
        margin: 5px 0;
    }
</style>
<div class="Create">
    <a href="@Url.Action("Create", "Phong")">Create</a>
</div>

<div class="phong-list">
    @foreach (var phong in Model)
    {
        <div class="phong-item @(phong.TrangThai == "Dadat" ? "da-dat" : "")">
            <a href="@Url.Action("Chitietphong", "Phong", new { MaPH = phong.MaPH })">
                <p>Room: @phong.SoPH</p>
                <p>Status: @phong.TrangThai</p>
            </a>
        </div>
    }
</div>