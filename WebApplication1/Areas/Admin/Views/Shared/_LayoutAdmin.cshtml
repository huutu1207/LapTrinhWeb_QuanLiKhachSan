<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Sidebar styling */
        #sidebar {
            height: 100vh;
            position: fixed;
            width: 250px;
            background-color: #f8f8f0; /* Màu nền sidebar */
            padding-top: 20px;
        }

            #sidebar .logo {
                text-align: center;
                margin-bottom: 30px;
            }

                #sidebar .logo img {
                    width: 80px;
                    height: auto;
                }

                #sidebar .logo h3 {
                    font-size: 1.2rem;
                    margin-top: 10px;
                    color: black;
                }

            /* Styling cho nút bên trong sidebar */
            #sidebar .nav-link {
                display: block;
                padding: 15px 20px;
                margin: 5px 15px; /* Khoảng cách giữa các nút */
                font-size: 1rem;
                color: black; /* Màu chữ mặc định */
                text-decoration: none;
                background-color: transparent; /* Nền trong suốt mặc định */
                border-radius: 30px; /* Bo góc nút */
                transition: all 0.3s ease-in-out;
            }

                #sidebar .nav-link:hover {
                    background-color: transparent; /* Nền trắng khi hover */
                    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Đổ bóng */
                }

                #sidebar .nav-link.active {
                    background-color: #fff; /* Nền trắng khi active */
                    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); /* Đổ bóng */
                }

        #navbar {
            height: 60px;
            background-color: #2c3e50;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            z-index: 1000;

        }


            #navbar .icons {
                display: flex;
                align-items: center;
                gap: 20px;
                margin-left: 85%;
            }

                #navbar .icons i {
                    font-size: 1.2rem;
                    cursor: pointer;
                    transition: color 0.3s ease-in-out;
                    padding: 12px; /* Khoảng cách bên trong icon */
                    border: 2px solid white; /* Đường viền trắng */
                    border-radius: 50%;
                }

                    #navbar .icons i:hover {
                        color: #1abc9c;
                        background-color: white;
                    }
        #content {
            margin-left: 250px;
            padding:80px 20px;

        }
    </style>
</head>
<body>
    <div id="sidebar">
        <div class="logo">
            <img src="@Url.Content("~/Images/Logo.png")" alt="Logo">
            <h3>LUCKY HOTEL</h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#">Quản lí phòng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Quản lí loại phòng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Quản lí dịch vụ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Quản lí menu</a>
            </li>

            
        </ul>
    </div>
    <div id="navbar">
        
        <div class="icons" style="block-size: 100px">
            <i class="fas fa-user"></i>
        </div>
    </div>


    <div id="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
