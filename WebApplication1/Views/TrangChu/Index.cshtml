        <!-- Carousel Section -->
        <div id="discountCarousel" class="carousel slide my-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <a href="@Url.Action("ChitietUuDai", "UuDai")" class="d-flex align-items-center text-decoration-none">
                        <div class="w-50 text-start pe-4">
                            <h5 class="large-title">Giảm giá đặc biệt lên đến 30%</h5>
                            <p class="large-text">Đặt phòng trước 30 ngày để nhận ưu đãi lên đến 30%. Đây là cơ hội tuyệt vời để bạn lên kế hoạch cho kỳ nghỉ hoàn hảo với giá ưu đãi nhất.</p>
                            <p class="details-text">Ưu đãi này áp dụng cho tất cả các loại phòng từ đơn giản đến cao cấp. Đừng bỏ lỡ cơ hội này để tiết kiệm chi phí cho chuyến đi của bạn!</p>
                            <p class="call-to-action">Nhanh tay đặt phòng để nhận ngay ưu đãi!</p>
                        </div>
                        <img src="~/Images/Sale1.jpg" class="d-block w-50 ms-auto" alt="Discount 1">
                    </a>
                </div>
                <!-- Slide 2 -->
                <div class="carousel-item">
                    <a href="@Url.Action("ChitietUuDai", "UuDai")" class="d-flex align-items-center text-decoration-none">
                        <div class="w-50 text-start pe-4">
                            <h5 class="large-title">Khuyến mãi cuối tuần</h5>
                            <p class="large-text">Đặt phòng cuối tuần nhận ngay ưu đãi giảm giá lên đến 20%. Chuyến đi cuối tuần thật tuyệt vời với mức giá cực hấp dẫn!</p>
                        </div>
                        <img src="~/Images/Sale2.jpg" class="d-block w-50 ms-auto" alt="Discount 2">
                    </a>
                </div>
                <!-- Slide 3 -->
                <div class="carousel-item">
                    <a href="@Url.Action("ChitietUuDai", "UuDai")" class="d-flex align-items-center text-decoration-none">
                        <div class="w-50 text-start pe-4">
                            <h5 class="large-title">Ưu đãi đặc biệt cho nhóm</h5>
                            <p class="large-text">Nếu bạn đặt phòng cho nhóm từ 4 người trở lên, bạn sẽ nhận được ưu đãi đặc biệt. Liên hệ để biết thêm chi tiết.</p>
                        </div>
                        <img src="~/Images/Sale3.jpg" class="d-block w-50 ms-auto" alt="Discount 3">
                    </a>
                </div>
            </div>

            <!-- Carousel Controls -->
            <button class="carousel-control-prev" type="button" data-bs-target="#discountCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#discountCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <!-- Phần PHÒNG YÊU THÍCH -->
    <section id="favoriteRoomSection" class="my-5 py-4">
        <h3 class="section-title bold-title">Phòng yêu thích</h3>
        <p class="section-subtitle">Những phòng được khách hàng đánh giá cao</p>
        <div class="room-container">
            @foreach (var room in Model)
            {
                <a href="@Url.Action("ChiTietPhong", "Phong", new { id = room.maphong })" class="phong">
                    <div class="room-item">
                        <img src="~/Images/Sliders/@room.anh" alt="Room Image" />
                        <div class="room-info">
                            <h4>Phòng @room.Name</h4>
                            <div class="danhgia">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(@room.rating))
                                    {
                                        <span class="star active"><i class="fas fa-star"></i></span>
                                    }
                                    else if (i == Math.Ceiling(@room.rating) && @room.rating % 1 != 0)
                                    {
                                        <span class="star active"><i class="fas fa-star-half-alt"></i></span>
                                    }
                                    else
                                    {
                                        <span class="star"><i class="fas fa-star"></i></span>
                                    }
                                }
                            </div>
                            <p>(@Math.Round(@room.rating, 1) - @room.cnt người đánh giá)</p>

                            <p><strong>Giá: </strong>@room.gia.ToString("#,0") VND </p>
                        </div>
                    </div>
                </a>
                
            }
        </div>
        <!-- Grid Section -->
        <!--<div class="grid" id="favoriteRoomContainer">-->
            <!-- Nội dung sẽ được sinh động -->
        <!--</div>-->
    </section>

