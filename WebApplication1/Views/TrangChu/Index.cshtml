    </section>


    <section id="planSection" class="my-5 py-4">
        <h3 class="section-title bold-title">Lên kế hoạch dễ dàng và nhanh chóng</h3>
        <p class="section-subtitle">Khám phá các điểm đến hàng đầu theo cách bạn thích</p>

        <!-- Tabs -->
        <div class="plan-tabs">
            <button class="tab active" data-category="beach">Bãi biển</button>
            <button class="tab" data-category="nature">Thiên nhiên</button>
            <button class="tab" data-category="city">Địa danh</button>
        </div>

        <!-- Grid Section -->
        <div class="grid" id="gridContainer">
            <!-- Dynamic content will be populated here -->
        </div>
    </section>

</div>
<style>
    .room-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .room-item {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .room-item:hover {
            transform: translateY(-5px);
        }

        .room-item img {
            width: 100%;
            height: 180px; /* Fixed height for images */
            object-fit: cover; /* Make sure the image covers the area */
            border-bottom: 2px solid #f1f1f1; /* Add a border between the image and text */
        }

    .room-info {
        padding: 15px;
        text-align: center;
    }

        .room-info h4 {
            font-size: 18px;
            font-weight: bold;
            margin: 10px 0;
            color: #333;
        }

        .room-info p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }

            .room-info p strong {
                color: #000;
            }
    .danhgia {
        display: inline-flex;
        gap: 5px;
    }

    .star {
        font-size: 20px;
        color: #ccc; /* Gray color for inactive stars */
        transition: color 0.3s ease-in-out;
    }

        .star.active {
            color: #f39c12; /* Yellow color for active stars */
        }

        .star i {
            transition: color 0.3s ease-in-out;
        }

        .star.active i {
            color: #f39c12; /* Highlight the filled stars in yellow */
        }
        
        .phong:hover {
            text-decoration: none;
        }
</style>
<script>
    const plansData = {
        beach: [
            {
                title: "Hòn Bà Vũng Tàu",
                distance: "Một địa danh nổi tiếng với vẻ đẹp thiên nhiên hoang sơ, nước biển trong xanh và khung cảnh yên bình.",
                image: "/Images/Places/Honba.png"
            },
            {
                title: "Bãi sau Vũng Tàu",
                distance: "Bãi biển dài và sạch với cát trắng mịn, lý tưởng để tắm biển và thư giãn.",
                image: "/Images/Places/Baisau.jpg"
            },
            {
                title: "Bến thuyền Marina",
                distance: "Địa điểm lãng mạn với bến thuyền độc đáo, là nơi chụp ảnh lý tưởng khi hoàng hôn buông xuống.",
                image: "/Images/Places/Benthuyen.jpg"
            }
        ],
        nature: [
            {
                title: "Rừng quốc gia Bình Châu",
                distance: "Một khu rừng nguyên sinh với hệ sinh thái phong phú, lý tưởng cho các chuyến trekking và khám phá thiên nhiên.",
                image: "/Images/Places/Rungquocgia.jpg"
            },
            {
                title: "Hồ đá xanh",
                distance: "Hồ nước xanh biếc nằm giữa núi non hùng vĩ, là điểm đến thư giãn và chụp ảnh tuyệt đẹp.",
                image: "/Images/Places/Hodaxanh.jpg"
            },
            {
                title: "Hồ Cốc",
                distance: "Khu du lịch thiên nhiên với biển xanh, bãi cát trắng và rừng dương bạt ngàn.",
                image: "/Images/Places/Hococ.jpg"
            },
            {
                title: "Hồ Mây",
                distance: "Khu du lịch sinh thái và vui chơi giải trí trên núi cao, nổi tiếng với cảnh quan hùng vĩ.",
