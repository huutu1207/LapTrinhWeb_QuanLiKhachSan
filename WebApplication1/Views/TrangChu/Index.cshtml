                    <p class="mb-0">
                        <a href="@Url.Action("DanhSachPhong", "Phong")" class="btn btn-primary px-4 py-3">Đặt ngay</a>
                        <a href="#" class="btn btn-white px-4 py-3">Liên hệ với chúng tôi</a>
