        },
        {
            title: "Phòng VIP",
            rating: 0,
            reviews: "0 đánh giá",
            price: "4.500.000 VND",
            image: "/Images/Rooms/Phongvip.jpg"
        },
        {
            title: "Phòng Có View Biển",
            rating: 0,
            reviews: "0 đánh giá",
            price: "3.000.000 VND",
            image: "/Images/Rooms/Phongviewbien.jpg"
        }
    ];

    // Hàm tạo các ngôi sao đánh giá
    function renderStars(rating) {
        const maxStars = 5;
        const filledStars = Math.round(rating); // Làm tròn số sao
        let starsHTML = '';

        for (let i = 1; i <= maxStars; i++) {
            if (i <= filledStars) {
                starsHTML += '<span style="color: gold;">&#9733;</span>'; // Sao vàng (đã đánh giá)
            } else {
                starsHTML += '<span style="color: lightgray;">&#9734;</span>'; // Sao xám (chưa đánh giá)
            }
        }
        return starsHTML;
    }

    // Hàm hiển thị danh sách phòng yêu thích
    function generateFavoriteRooms() {
        const favoriteRoomContainer = document.getElementById('favoriteRoomContainer');
        favoriteRoomContainer.innerHTML = ''; // Xóa nội dung cũ

        favoriteRooms.forEach(room => {
            const roomItem = document.createElement('div');
            roomItem.classList.add('grid-item');
            roomItem.innerHTML = `
            <img src="${room.image}" alt="${room.title}" />
            <h3>${room.title}</h3>
            <p><strong>Đánh giá:</strong> ${renderStars(room.rating)} (${room.rating}/5 - ${room.reviews})</p>
            <p><strong>Giá:</strong> ${room.price}</p>
        `;
            favoriteRoomContainer.appendChild(roomItem);
        });
    }

    // Gọi hàm khi trang được tải
    generateFavoriteRooms();

</script>

