@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}
<div class="forgot-password-page">
    <div class="forgot-password-container">
        <h2>Forgot Password?</h2>
        <p>Please enter your email address to receive a password reset link.</p>
        <form method="post" action="/User/QuenMatKhau">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required />
                @if (ViewData["ErrEmail"] != null)
                {
                    <span class="error">@ViewData["ErrEmail"]</span>
                }
            </div>
            <div class="nut">
                <button type="submit" class="btn-reset-password">Send Reset Link</button>
            </div>
        </form>
        @if (ViewBag.ThongBao != null)
        {
            <div class="thong-bao">
                <p>@ViewBag.ThongBao</p>
            </div>
        }
        <div class="login-link">
            <p>Remember your password? <a href="/User/DangNhap">Log in</a></p>
        </div>
    </div>
</div>

<style>
    /* CSS for the Forgot Password page */
    .forgot-password-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f3f4f6;
    }

    .forgot-password-container {
        width: 100%;
        max-width: 450px;
        background-color: #fff;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

        .forgot-password-container h2 {
            font-size: 24px;
            color: #333;
            margin-bottom: 10px;
        }

        .forgot-password-container p {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .forgot-password-container .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .forgot-password-container .form-group label {
                font-size: 14px;
                color: #333;
                margin-bottom: 8px;
                display: block;
            }

            .forgot-password-container .form-group input {
                width: 100%;
                padding: 12px;
                font-size: 14px;
                border: 1px solid #ccc;
                border-radius: 4px;
                margin-top: 5px;
            }

                .forgot-password-container .form-group input:focus {
                    border-color: #007bff;
                    outline: none;
                }

        .forgot-password-container .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }

        .forgot-password-container .nut {
            margin-top: 20px;
        }

        .forgot-password-container .btn-reset-password {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .forgot-password-container .btn-reset-password:hover {
                background-color: #0056b3;
            }

        .forgot-password-container .login-link {
            margin-top: 15px;
        }

            .forgot-password-container .login-link p {
                font-size: 14px;
                color: #666;
            }

            .forgot-password-container .login-link a {
                color: #007bff;
                text-decoration: none;
            }

                .forgot-password-container .login-link a:hover {
                    text-decoration: underline;
                }

    /* Responsive design */
    @@ media screen and (max-width: 600px) {
        .forgot-password-container {
            padding: 20px;
            width: 90%;
        }
    }
</style>