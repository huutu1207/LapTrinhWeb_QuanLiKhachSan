@model WebApplication1.Models.KHACHHANG

@{
    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="profile-container">
    <div class="profile-header">
        <h3>Thông tin cá nhân</h3>
    </div>

    <div class="profile-info">
        <div class="profile-picture">
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <img src="@Url.Content(Model.Avatar)" alt="Profile Picture" />
            }
            else
            {
                <img src="@Url.Content("~/Images/User/DefaultAvatar.jpg")" alt="Default Avatar" />
            }
        </div>

        <div class="profile-details">
            <p><strong>Full Name:</strong> @Model.HoTen</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone Number:</strong> @Model.DienThoai </p>
            <p><strong>Address:</strong> @Model.DiaChi </p>
        </div>
    </div>

    @*<div class="profile-actions">
            <a href="@Url.Action("EditProfile", "User")" class="btn-edit-profile">Edit Profile</a>
        </div>*@
    <div class="profile-actions">
        <button type="button" id="editProfileBtn" class="btn-edit-profile">Edit Profile</button>
    </div>

    <div id="editProfileForm" style="display:none;">
        <label for="editFullName">Full Name:</label>
        <input type="text" id="editFullName" value="@Model.HoTen" />
        <label for="editEmail">Email:</label>
        <input type="text" id="editEmail" value="@Model.Email" />
        <label for="editPhoneNumber">Phone Number:</label>
        <input type="text" id="editPhoneNumber" value="@Model.DienThoai" />
        <label for="editAddress">Address:</label>
        <input type="text" id="editAddress" value="@Model.DiaChi" />
        <button type="button" id="saveProfileBtn">Save Changes</button>
    </div>
</div>


    <style>
        .profile-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
            font-family: Arial, sans-serif;
            background-color: #f3f8fc; /* Màu nền sáng hơn (màu xanh nhạt) */
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 128, 255, 0.3); /* Bóng đổ màu xanh dương với độ mờ */
        }

        /* Profile header */
        .profile-header h3 {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Profile information section */
        .profile-info {
            display: flex;
            flex-wrap: wrap;
            margin-top: 20px;
            justify-content: center;
        }

        /* Profile picture */
        .profile-picture {
            flex: 1 1 150px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 20px;
        }

            .profile-picture img {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                object-fit: cover;
                border: 2px solid #ccc;
            }

        /* Profile details */
        .profile-details {
            flex: 2 1 300px;
        }

            .profile-details p {
                font-size: 16px;
                margin: 8px 0;
                color: #555;
            }

            .profile-details strong {
                color: #333;
            }

        /* Edit profile button */
        .profile-actions {
            text-align: center;
            margin-top: 30px;
        }

        .btn-edit-profile {
            background-color: #fea116;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-edit-profile:hover {
                background-color: #f99601;
            }
    </style>
